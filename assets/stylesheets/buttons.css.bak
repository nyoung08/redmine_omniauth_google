.button-login {
  position: relative;
  left: 45%;
  display: inline-block;
  border: 1px solid #999;
  border-radius: 2px;
  margin-top: 10px;
  width: 240px;
  height: 50px;
  padding: 0;
}

.button-login-icon {
  float: left;
  height: 38px;
  padding: 1px 0px 0px 4px;
}

.button-login-text {
  line-height: 41px;
  background-image: #FFFFFF;
  font-size: 20px;
  font-weight: bold;
  font-color: #4285F4;
}
